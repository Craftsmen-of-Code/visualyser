{
  "name": "visualyser",
  "displayName": "Visualyser",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./build/extension.js",
  "contributes": {
    "commands": [
      {
        "title": "Hello World",
        "category": "Visualyser",
        "command": "visualyser.helloWorld"
      },
      {
        "title": "Analyze Current Directory",
        "category": "Visualyser",
        "command": "visualyser.analyze-current-directory"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "Visualyser-explorer",
          "title": "Visualyser",
          "icon": "media/graphIcon.svg"
        }
      ]
    },
    "views": {
      "Visualyser-explorer": [
        {
          "id": "mainContent",
          "name": "Visualyser",
          "icon": "media/graphIcon.svg",
          "contextualTitle": "Visualyser"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "mainContent",
        "contents": "[Analyze Current Directory](command:visualyser.analyze-current-directory)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "esbuild-base": "esbuild src/extension.ts --bundle --minify --outdir=build --external:vscode --platform=node --target=node14 --format=cjs",
    "compile": "npm run esbuild-base",
    "watch": "npm run compile -- --watch",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./build/test/runTest.js"
  },
  "devDependencies": {
    "@types/babel__traverse": "^7.20.1",
    "@types/glob": "^8.1.0",
    "@types/node": "20.4.2",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/test-electron": "^2.3.3",
    "esbuild": "^0.18.13",
    "eslint": "^8.45.0",
    "glob": "^10.3.3",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "@babel/parser": "^7.22.7",
    "@babel/traverse": "^7.22.8",
    "chart.js": "^4.3.0",
    "chartjs-chart-graph": "^4.2.3"
  }
}
